{
  "name": "talkaz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip3 install -r requirements.txt",
    "start": "npm run setup && npm run dev",
    "dev": "concurrently -n \"backend,frontend\" -c \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --port 8000"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
