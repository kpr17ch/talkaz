{
  "name": "talkaz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && ./setup.sh",
    "start": "npm run setup && npm run dev",
    "dev": "concurrently -n \"backend,frontend\" -c \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./start.sh"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
